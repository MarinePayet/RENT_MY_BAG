

<div class= "container1">


    <div class="form">
      <%= simple_form_for [@user, @bag] do |f| %>
        <%= f.input :title, :label=> "Title of your ad", input_html: { class: "input-bar"} %>
        <%= f.input :brand, collection: Bag::BRAND, prompt: "Select a brand", input_html: { class: "input-bar"}%>
        <%= f.input :style, collection: Bag::STYLE, as: :check_boxes, :label=> "Style (select 1 or more)", input_html: { class: "input-label"}%>
        <%= f.input :mood, collection: Bag::MOOD, as: :check_boxes, :label=> "Mood (select 1 or more)" %>
        <%= f.input :color, input_html: { class: "input-bar"} %>
        <%= f.input :description, :label=> "Give a little more details about your bag", input_html: { class: "input-bar"} %>
        <%= f.input :price, :label=> "Price/day (in â‚¬)", input_html: { class: "input-bar"} %>
        <%= f.input :availability, as: :radio_buttons, :label=> "Available" %>
        <%= f.file_field :images, multiple: true %>
        <br>
        <%= f.submit "Add bag", class: "btn-other btn-ghost2" %>
      <% end %>
    </div>
</div>


