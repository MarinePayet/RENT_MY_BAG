<h1>Let's add a new bag!</h1>

<%= simple_form_for [@user, @bag] do |f| %>
  <%= f.input :title, :label=> "Title of your ad" %>
  <%= f.input :brand, collection: Bag::BRAND, prompt: "Select a brand" %>
  <%= f.input :style, collection: Bag::STYLE, as: :check_boxes, :label=> "Style (select 1 or more)" %>
  <%= f.input :mood, collection: Bag::MOOD, as: :check_boxes, :label=> "Mood (select 1 or more)" %>
  <%= f.input :color %>
  <%= f.input :description, :label=> "Give a little more details about your bag" %>
  <%= f.input :price, :label=> "Price/day (in â‚¬)" %>
  <%= f.input :availability, as: :radio_buttons, :label=> "Available" %>
  <%= f.input :photo, as: :file, :label=> "Add a photo"  %>
  <%= f.submit "Add bag", class: "btn btn-primary" %>
<% end %>


