<div class="container mt-5">
    <div class="row">
      <% @bags.each do |bag| %>
        <div class="col col-lg-4">
          <div class="card-bag">
            <%= image_tag bag.images[0], height: 500, width: 700 %>
            <div class="card-bag-infos">
              <div>
                <%= link_to bag.title.upcase.first(20), bag_path(bag[:id]) %>
                  <% if bag.availability %>
                  <i class="fas fa-circle" style="color:green"></i>
                  <% else %>
                  <i class="fas fa-circle" style="color:red"></i>
                  <% end %>
                <br>
                <%= bag.brand.capitalize %>
              </div>
                <h2 class="card-bag-pricing"><%= bag.price %>â‚¬/day</h2>
              </div>
            </div>
          </div>
      <% end %>
       </div>
      </div>
</div>
